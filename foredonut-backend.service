[Unit]
Description=Fore Donut Backend 
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=user
WorkingDirectory=/home/user/fore_donut/backend
Environment="PYTHONUNBUFFERED=1"
ExecStart=/home/user/fore_donut/backend/venv/bin/uvicorn backend:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
